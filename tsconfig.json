{
    "compilerOptions": {
        "target": "es6", // es6 / es5
        "module": "esnext",// esnext / commonjs
        "baseUrl": "./",// ./src /src
        "jsx": "react",// preserve /  react
        "strict": true,
        "sourceMap": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "allowSyntheticDefaultImports": true,
        "noImplicitAny": false,
        "forceConsistentCasingInFileNames": true,
        "lib": [
            "dom",
            "dom.iterable",
            "esnext"
        ],
        "paths": {
            "shared": [ "shared"],
            "components": [ "./src/components/Title"]
        },

        "allowJs": true,
        "moduleResolution": "node",
        "noEmit": false,
        "typeRoots": [
            "./node_modules/@types/"
        ],
        "resolveJsonModule": true,
        "isolatedModules": true
    },
    "include": [
        "./src",
        "./src",
        "./webpack",
        "./server",
        "./shared"
    ],
    "exclude": [
        "typings/browser.d.ts",
        "typings/browser",
        "node_modules",
        "typings"
    ]
}
